{
  "extends": "@sjw/typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "baseUrl": "."
  },
  "include": [
    "utils/**/*.ts",
    "types/**/*.ts",
    "parser/**/*.ts",
    "utils/fs/fs.ts",
    "docs/**/*.ts",
    "db/**/*.ts",
    "templates/**/*.ts",
    "./drizzle.config.ts",
    "templates/errors.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
